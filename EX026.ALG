Algoritmo "EX026"

var base, alt, area: real

Inicio

    //ENTRADA
    escreval("Informe as medidas de um triângulo(em cm)")

    escreva("Informe a base: ")
    leia(base)

    escreva("Informe a altura: ")
    leia(alt)

    //PROCESSO
    area <- (base * alt) / 2

    //SAÍDA
    escreva("Valor da área do triângulo: ", area:5:2,"cm")

Fimalgoritmo