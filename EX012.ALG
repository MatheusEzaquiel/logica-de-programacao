Algoritmo "EX012"

var num1, num2, media: real

Inicio

    //ENTRADA
    escreva("Informe o primeiro número: ")
    leia(num1)
    
    escreva("Informe o segundo número: ")
    leia(num2)
    
    //PROCESSO
    media <- (num1 + num2) / 2
    
    //SAÍDA
    escreva("Média: ", media:2:1)

Fimalgoritmo